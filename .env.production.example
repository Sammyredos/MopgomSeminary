# Production Performance
MAX_REQUEST_SIZE=10mb
BODY_PARSER_LIMIT=10mb
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ERROR_REPORTING_ENABLED=true
